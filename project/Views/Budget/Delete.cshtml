@model project.Models.BudgetList

@{
    ViewData["Title"] = "刪除預算";
}

<h2>確認刪除</h2>

<div>
    <h4>您確定要刪除這個預算嗎？</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>類別:</dt>
        <dd>@Model.Description</dd>

        <dt>金額:</dt>
        <dd>@Model.Amount</dd>

        <dt>週期 (月):</dt>
        <dd>@Model.AccountBookID</dd>
    </dl>

    @using (Html.BeginForm("DeleteBudget", "Budget", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="budgetID" value="@Model.BudgetID" />
        <input type="hidden" name="accountBookID" value="@Model.AccountBookID" />

        <div class="form-actions no-color">
            <input type="submit" value="刪除" class="btn btn-danger" />
            @Html.ActionLink("返回列表", "Index", new { accountBookID = Model.AccountBookID }, new { @class = "btn btn-default" })
        </div>
    }
</div>
